<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Dashboard</title>
  <link rel="stylesheet" href="/css/student_dashboard.css">
  <link rel="stylesheet" href="/css/chatbox.css"> <!-- Add common chatbox CSS -->
  <script src="/socket.io/socket.io.js"></script>
  <script type="module" src="/modules/emoji-picker-element/dist/index.js"></script>
</head>

<body>
  <header>
    <div class="logo-container">
      <img src="/images/IIITP_Logo.jpeg" alt="IIITP Logo" class="logo-img">
      <h1 class="header-title">Student Project Management</h1>
    </div>
    <nav>
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="/contact">Contact</a>
      <a href="/student/login">Logout</a>
    </nav>
  </header>

  <div class="heading">
    <h1 class="project-title">Project Title: <%= data.projectTitle %>
    </h1>

    <div class="info-grid">
      <div class="name-container">
        <div class="info-item">
          <h2>Faculty Name</h2>
          <p>Dr. <%= data.faculty %>
          </p>
        </div>

        <div class="info-item">
          <h2>Student Name</h2>
          <p>
            <%= data.studentName %>
          </p>
        </div>
      </div>

      <div class="details-container">
        <div class="info-item">
          <h2>Project Domain</h2>
          <p>
            <%= data.projectDomain %>
          </p>
        </div>

        <div class="info-item">
          <h2>Degree</h2>
          <p>
            <%= data.degree %>
          </p>
        </div>

        <div class="info-item">
          <h2>Branch</h2>
          <p>
            <%= data.branch %>
          </p>
        </div>

        <div class="info-item">
          <h2>Semester</h2>
          <p>
            <%= data.semester %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Pass Group ID to client-side JS -->
  <input type="hidden" id="groupId" value="<%= groupId %>">
  <input type="hidden" id="userId" value="<%= data.studentId %>"> <!-- Pass user ID -->
  <input type="hidden" id="userType" value="student"> <!-- Pass user type -->


  <!-- Chatbox Section -->
  <!-- Chatbox Area -->
  <div class="chatbox-container">
    <h2>Group Chat</h2>

    <!-- Pinned Messages Area -->
    <div id="pinnedMessages" class="pinned-messages-area" style="display: none;">
      <h4>ðŸ“Œ Pinned Messages</h4>
      <div id="pinnedMessagesList"></div>
      <hr class="pin-divider">
    </div>

    <!-- Main Message Area -->
    <div id="chatMessages" class="message-area">
      <p class="system-message">Loading chat...</p>
    </div>

    <!-- Reply Context Indicator -->
    <div id="replyContextIndicator" class="reply-context-indicator" style="display: none;">
      Replying to <strong id="replyUserName"></strong>: "<span id="replyMessagePreview"></span>"
      <button id="cancelReplyBtn" class="cancel-reply-btn">Ã—</button>
    </div>


    <!-- Input Area -->
    <div class="input-area">
      <!-- Emoji Picker Button -->
      <button id="emojiBtn" class="emoji-button">ðŸ˜€</button>
      <textarea id="messageInput" placeholder="Type your message (Shift+Enter for newline)..." rows="1"></textarea>
      <input type="file" id="fileInput" style="display: none;"
        accept="image/*,application/pdf,.doc,.docx,.txt,.zip,.rar,.7z,.csv,.xls,.xlsx,.ppt,.pptx,.c,.cpp,.java,.py,.js,.html,.css">
      <!-- Example accepts -->
      <button id="sendFileBtn" title="Attach File">ðŸ“Ž</button>
      <button id="sendMessageBtn" title="Send Message">Send</button>
    </div>
    <!-- Upload Status & Edit Indicator -->
    <div class="status-area">
      <span id="uploadStatus" class="upload-status"></span>
      <span id="editingIndicator" class="editing-indicator" style="display: none;">Editing message... <button
          id="cancelEditBtn" class="cancel-edit-btn">Cancel</button></span>
    </div>
  </div>

  <script src="/js/chat.js"></script>


</body>

</html>