<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Staff Dashboard</title>
    <link rel="stylesheet" href="/css/staff_dashboard.css" />
  </head>
  <body>
    <header>
      <div class="logo-container">
        <img src="/images/IIITP_Logo.jpeg" alt="IIITP Logo" class="logo-img">
        <h1>Student Project Management</h1>
      </div>
    
      <nav style="display: flex; align-items: center; gap: 1rem;">
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
        <a href="/staff/login">Logout</a>
    
        <% if (staff) { %>
          <a href="/staff/<%= staff.staff_id %>/profile" title="<%= staff.first_name %>" 
            style="background-color: #007bff; color: white; border-radius: 50%; width: 40px; height: 40px; 
                   display: flex; align-items: center; justify-content: center; font-weight: bold;">
            <%= staff.first_name.charAt(0).toUpperCase() %>
          </a>
        <% } %>
      </nav>
    </header>
    

    <div class="box-wrapper">
      <div class="navbar">
        <h2>Welcome <%= staff.first_name %> <%= staff.last_name %>!</h2>
      </div>
      <h2>Assigned Groups</h2>
      <div class="container">
        <div class="groups">
          <% data.forEach(group => { %>
            <a href="/staff/<%= staff.staff_id %>/dashboard/group/<%= group.group_id %>">
                <div class="group-column">
                    <div class="card">
                      <h3>Group <%= group.group_id %></h3> 
                      <h4><%= group.project_title %></h4>
                      <p><strong>Project Domain:</strong> <%= group.project_domain || "Not Assigned" %></p> 
                      <ul class="list">
                        <% group.members.split(', ').forEach(student => { %>
                          <li><%= student %></li>
                        <% }) %>
                      </ul>
                    </div>
                </div>
            </a> 
          <% }) %>
        </div>
      </div>
    </div>  
    

  </body>
</html>
